doctype html
html
    head
        title Blog-app
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/main.css')
    body
        nav.navbar.navbar-inverse.bg-dark
            .container
                .navbar-header
                    if user
                        h5.blog Welcome #{user.name}
                    else
                        a.navbar-brand.blog(href='/') Blog-App
                .nav.navbar-nav.justify-content-lg-start
                    ul.nav.mbl
                       
                        if user
                            li.nav-item.space
                                a.nav-link(href='/users/home') Home
                            li.nav-item.space
                                a.nav-link(href='/articles/add') Add Articles
                            li.nav-item.space 
                                a.nav-link(href='/users/logout') Logout
                        else
                            li.nav-item.space
                                a.nav-link(href='/') Home
                            li.nav-item.space
                                a.nav-link(href='/users/register') Register
                            li.nav-item.space
                                a.nav-link(href='/users/login') Login
        .container
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class='alert alert-danger') #{error.msg}
            block content
            br
            hr
            footer
                p Copyright &copy; 2018
        script(src='/bower_components/jquery/dist/jquery.js')  
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/application.js')